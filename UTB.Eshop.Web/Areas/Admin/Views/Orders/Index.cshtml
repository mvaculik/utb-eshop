@model IEnumerable<UTB.Eshop.Web.Models.Entities.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table CarouselItem">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
             <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
           
                <td><a asp-action="Edit" asp-route-id="@item.ID">Edit</a></td>
                <td><a asp-action="Details" asp-route-id="@item.ID">Details</a></td>
                <td><a asp-action="Delete" asp-route-id="@item.ID">Delete</a></td>
            
        </tr>
}
    </tbody>
</table>
