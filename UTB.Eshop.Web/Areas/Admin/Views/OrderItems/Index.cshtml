@model IEnumerable<UTB.Eshop.Web.Models.Entities.OrderItem>

@{
    ViewData["Title"] = "Order Items";
}

<h1>Order Items</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table CarouselItem">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
             <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ID)
            </td>
           
                 <td><a asp-action="Edit" asp-route-id="@item.ID">Edit</a></td>
                 <td><a asp-action="Details" asp-route-id="@item.ID">Details</a></td>
                 <td><a asp-action="Delete" asp-route-id="@item.ID">Delete</a></td>
         
        </tr>
}
    </tbody>
</table>
